<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    			xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:minHeight="64dp"
                android:id="@+id/rl_main_activity">
                  <com.google.ads.AdView android:id="@+id/adView"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         ads:adUnitId="@string/MY_AD_UNIT_ID"
                         ads:adSize="BANNER"
                         ads:testDevices="TEST_EMULATOR, 653261576202928890201CF404DA5F58"
                         ads:loadAdOnCreate="true"/>

                  <Button
                      android:id="@+id/btnCatch"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentRight="true"
                      android:layout_below="@+id/adView"
                      android:layout_marginTop="19dp"
                      android:text="Create Catch" />
                     <Button
                      android:id="@+id/btnShowCatches"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentRight="true"
                      android:layout_below="@+id/btnCatch"
                      android:text="Show Catches" />

                  <Button
                      android:id="@+id/btnMaps"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentRight="true"
                      android:layout_below="@+id/btnShowCatches"
                      android:text="Show Maps" />

                  <Button
                      android:id="@+id/btnShowSwims"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentRight="true"
                      android:layout_below="@+id/btnMaps"
                      android:text="Show Swims" />

                  <TextView
                      android:id="@+id/tvWeather"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_below="@+id/btnShowSwims"
                      android:layout_marginTop="23dp"
                      android:text="" />

               

</RelativeLayout>